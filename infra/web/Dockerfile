FROM node:20-bookworm-slim AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

ARG VITE_SUPABASE_URL
ARG VITE_SUPABASE_ANON_KEY
ARG VITE_RESERVE_ADMIN_EMAIL
ARG VITE_AUTH_MODE
ARG VITE_KEYCLOAK_PUBLIC_URL
ARG VITE_KEYCLOAK_REALM
ARG VITE_KEYCLOAK_CLIENT_ID

ENV VITE_SUPABASE_URL=${VITE_SUPABASE_URL}
ENV VITE_SUPABASE_ANON_KEY=${VITE_SUPABASE_ANON_KEY}
ENV VITE_RESERVE_ADMIN_EMAIL=${VITE_RESERVE_ADMIN_EMAIL}
ENV VITE_AUTH_MODE=${VITE_AUTH_MODE}
ENV VITE_KEYCLOAK_PUBLIC_URL=${VITE_KEYCLOAK_PUBLIC_URL}
ENV VITE_KEYCLOAK_REALM=${VITE_KEYCLOAK_REALM}
ENV VITE_KEYCLOAK_CLIENT_ID=${VITE_KEYCLOAK_CLIENT_ID}

RUN npm run lingui:compile && npm run build

FROM nginx:1.27-alpine

COPY infra/web/nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=builder /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
